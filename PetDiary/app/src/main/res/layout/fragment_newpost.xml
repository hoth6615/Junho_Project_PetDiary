<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff">

                <Spinner
                    android:spinnerMode="dropdown"
                    android:id="@+id/categorySpinner"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    app:cardCornerRadius="30dp"
                    android:id="@+id/cardView1"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:src="@drawable/ic_baseline_add_24"
                        android:id="@+id/postImg1"/>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/deletePostImg1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_cancel"
                    android:layout_alignTop="@id/cardView1"
                    android:layout_toRightOf="@+id/cardView1"
                    android:visibility="invisible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="10dp"
                        android:id="@+id/cardView2"
                        android:background="@drawable/button">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_baseline_add_24"
                            android:id="@+id/postImg2"/>

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/deletePostImg2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_cancel"
                        android:layout_alignTop="@id/cardView2"
                        android:layout_toRightOf="@+id/cardView2"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="10dp"
                        android:id="@+id/cardView3"
                        android:background="@drawable/button">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_baseline_add_24"
                            android:id="@+id/postImg3"/>

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/deletePostImg3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_cancel"
                        android:layout_alignTop="@id/cardView3"
                        android:layout_toRightOf="@id/cardView3"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="10dp"
                        android:id="@+id/cardView4"
                        android:background="@drawable/button">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_baseline_add_24"
                            android:id="@+id/postImg4"/>

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/deletePostImg4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_cancel"
                        android:layout_alignTop="@id/cardView4"
                        android:layout_toRightOf="@id/cardView4"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="10dp"
                        android:id="@+id/cardView5"
                        android:background="@drawable/button">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_baseline_add_24"
                            android:id="@+id/postImg5"/>

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/deletePostImg5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_cancel"
                        android:layout_alignTop="@id/cardView5"
                        android:layout_toRightOf="@id/cardView5"
                        android:visibility="invisible"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/contents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:background="@drawable/textbox"
                    android:hint="내용을 입력해주세요."
                    android:layout_centerInParent="true"
                    android:maxLength="100"/>

                <TextView
                    android:id="@+id/contentsLengthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:layout_alignRight="@+id/contents"
                    android:layout_below="@+id/contents"
                    android:text="0 / 100"/>

            </RelativeLayout>

            <Button
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록"
                android:id="@+id/postButton"
                android:background="@drawable/button2"/>

        </LinearLayout>


    </ScrollView>

    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>


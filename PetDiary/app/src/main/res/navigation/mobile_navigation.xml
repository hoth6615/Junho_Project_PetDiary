<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_friends">

    <fragment
        android:id="@+id/nav_friends"
        android:name="com.example.petdiary.ui.friends.FriendsListFragment"
        tools:layout="@layout/fragment_friends" >
        <action
            android:id="@+id/friends_to_chat"
            app:destination="@+id/nav_chat"/>
    </fragment>
    <fragment
        android:id="@+id/nav_chat"
        android:name="com.example.petdiary.ui.chat.ChatListFragment"
        tools:layout="@layout/fragment_chat">
    <action
        android:id="@+id/chat_to_friends"
        app:destination="@+id/nav_friends"/>
    </fragment>
</navigation>